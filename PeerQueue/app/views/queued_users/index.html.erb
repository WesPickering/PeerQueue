<head>
<link rel="stylesheet" href="app/assets/stylessheets/queued_users.css">
</head>

<div class="banner">
  <h1>Queued Users</h1>
</div>

<table cellspacing = '0' class="center">
  <thead>
    <tr>
      <th>Name</th>
      <th>Time Added</th>
      <th>Question</th>
      <th>Status</th>
      <th>Peer Help</th>
      <th colspan=4></th>
    </tr>
  </thead>

  <tbody>
    <% @queued_users.order("created_at").each do |queued_user| %>
      <tr>
        <td><%= queued_user.Name %></td>
        <td><%= (queued_user.created_at - 28800).strftime("%r") %></td>
        <td><%= queued_user.Question %></td>
        <td><%= queued_user.Status %></td>
        <% if (queued_user.PeerHelp && current_user.student?) || !current_user.student?%>
        <td><%= button_to "Help", users_help_path(foo_param: queued_user), method: :post %></td>
        <% end %>

        <% if queued_user.dbID == session[:user_id] %>
        <td><%= link_to 'edit', edit_queued_user_url(queued_user) %></td>
        <td><%= link_to 'Remove', queued_user, method: :delete, data: {confirm: "are you sure m8?"}%></td>
        <%= link_to("Logout", logout_path) do %>
        <%= queued_user => method: :delete %>
        <% end %>
        <%end%>
      </tr>
    <% end %>

  </tbody>
</table>
<br>

<% if current_user && current_user.instructor? %>
<body>
<h1>I'm an instructor</h1>
</body>
<% end %>

<% if current_user && current_user.ta? %>
<body>
<h3>I'm a TA</h3>
</body>
<% end %>

<% if current_user && current_user.student? %>
<body>
<h3>I'm a student</h3>
</body>
<% end %>




<% if QueuedUser.find_by_dbID(session[:user_id]) == @current_user%>
<%= link_to 'Add Self to Queue', new_queued_user_path %>
<% end %>
